@page "{heroId:int?}"

@model ASPNetCoreApp1.Pages.Heroes.EditModel
@{
}


<form method="post">

    <input type="hidden" asp-for="Hero.Id" />
    <div class="form-group">
        <label asp-for="Hero.Name"></label>
        <input asp-for="Hero.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Hero.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hero.Type"></label>
        <select class="form-control" asp-for="Hero.Type" asp-items="Model.Types"></select>
        <span class="text-danger" asp-validation-for="Hero.Type"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hero.CreationDate"></label>
        <input asp-for="Hero.CreationDate" class="form-control" />
        <span class="text-danger" asp-validation-for="Hero.CreationDate"></span>
    </div>
    
    <button type="submit" class="btn btn-primary"> Save </button>
</form>